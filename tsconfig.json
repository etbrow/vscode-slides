{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6", "es2016"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "declaration": false,
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", ".vscode-test", "playground"]
}
